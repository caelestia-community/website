{
  "name": "caelestia-web",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start -p 3001",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write --ignore-unknown \"**/*.{ts,tsx,scss}\"",
    "prettier:test": "prettier --check \"**/*.{ts,tsx,scss}\"",
    "prettier:write": "prettier --write \"**/*.{ts,tsx,scss}\"",
    "spellcheck": "cspell \"**/*.md\" \"app/**/*.tsx\" \"i18n/**/*.{json}\""
  },
  "cspell": {
    "dictionaryDefinitions": [
      {
        "name": "caelestia",
        "path": "./.cspell/caelestia.txt",
        "addWords": true
      }
    ],
    "dictionaries": [
      "caelestia"
    ],
    "ignorePath": [
      "node_modules",
      ".cspell/caelestia.txt"
    ]
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/env": "^16.1.1",
    "@next/mdx": "^16.1.1",
    "@types/mdx": "^2.0.13",
    "material-symbols": "^0.40.2",
    "next": "16.1.1",
    "next-intl": "^4.6.1",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-inlinesvg": "^4.2.0",
    "rehype-external-links": "^3.0.0",
    "rehype-pretty-code": "^0.14.1",
    "shiki": "^3.20.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "baseline-browser-mapping": "^2.9.11",
    "cspell": "^9.4.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.7.4",
    "sass": "^1.97.1",
    "stylelint": "^16.26.1",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-scss": "^6.14.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
